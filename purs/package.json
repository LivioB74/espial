{
  "name": "espial",
  "private": true,
  "scripts": {
    "spago": "spago",
    "purs": "purs",
    "make-install": "make install",
    "make-watch": "inotifywait -m -r -q -e close_write --format '%T %w%f' --timefmt '%T' src | while read FILE; do echo $FILE; make; done",
